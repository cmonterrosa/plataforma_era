 <!-- Historial de estatus del tramite -->
 <table width="60%" border="0" cellspacing="0" cellpadding="0" class="sample" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid">
     <tr style="background-color:#2E6AB1;color:white;">
      <th colspan="3">
        Antecedentes en ciclos escolares anteriores
      </th>
     </tr>
    

     <%@antecedentes.each do |a|%>
       <tr class="d1">
         <td style="vertical-align: middle;" rowspan="7"><b>CICLO: <%=h (a.ciclo_id)? a.ciclo.descripcion : "No existe información"%></b></td>
         <td colspan="2">&nbsp;</td>
       </tr>

       <tr class="d0">
         <td style="vertical-align: middle;"><b>Estatus</b></td>
         <td style="vertical-align: middle;"><%=h (a.estatu_id.size > 0)? a.estatu.descripcion : "---"%></td>
       </tr>

       <tr class="d1">
         <td style="vertical-align: middle;"><b>Nombre del proyecto</b></td>
         <td style="vertical-align: middle;"><%=h (a.nombre_proyecto.size > 0)? a.nombre_proyecto : "---"%></td>
       </tr>

       <tr class="d0">
         <td style="vertical-align: middle;"><b>Puntaje diagnóstico</b></td>
         <td style="vertical-align: middle;"><%=h (a.puntaje_diagnostico.size > 0)? a.puntaje_diagnostico : "---" %></td>
       </tr>

       <tr class="d1">
         <td style="vertical-align: middle;"><b>Puntaje Proyecto</b></td>
         <td style="vertical-align: middle;"><%=h (a.puntaje_proyecto.size > 0) ? a.puntaje_proyecto : "---" %></td>
       </tr>

       <tr class="d0">
         <td style="vertical-align: middle;"><b>Puntaje final</b></td>
         <td style="vertical-align: middle;"><%=h (a.puntaje_final.size > 0)? a.puntaje_final : "---"%></td>
       </tr>

       <tr class="d1">
         <td style="vertical-align: middle;"><b>Beneficiada</b></td>
         <td style="vertical-align: middle;"><%=h (a.beneficiada == false)? "No" : "Sí"%></td>
       </tr>

    <%end%>
  </table>

 <br />