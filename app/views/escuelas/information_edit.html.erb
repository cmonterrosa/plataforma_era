<% @user.password = @user.password_confirmation = nil %>
<%= error_messages_for :user %>

<% form_for :user, @user, :url => { :action => "save_information" } do |f| -%>
    <table width="90%" border="0" cellspacing="0" cellpadding="0" class="sample" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid" align="center">
    <tr bgcolor="#CCCCCC" class="titulo">
      <td colspan="3" align="center" >EDITAR USUARIO</td>
    </tr>
    <tr align="center">
      <td align="center">
        <table width="100%" border="0" cellpadding="2" cellspacing="1" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid;">
        <tr bgcolor="#E8E8E8" class="subtitulo">
          <td align="center" colspan="4">DATOS GENERALES</td>
        </tr>
        <tr align=" justify" class="pregunta">
          <td align="center">Login</td>
          <td align="center">Nombre del Centro Escolar</td>
        </tr>
        <tr>
          <td align="center"><%=h @user.login.upcase%> <div id="mensaje"></div></td>

          <!-- nombre del centro escolar o usuario -->
          <%nombre= (@esc = Directivo.find_by_clave(current_user.login)) ? @esc.descripcion : nil%>
          <%nombre ||= (@esc = Escuela.find_by_clave(current_user.login)) ? @esc.nombre : nil %>
          <%nombre ||= current_user.nombre %>

          <td align="center"><%=nombre%></td>
        </tr>

        <!-- espacio -->
        <tr align=" justify" class="pregunta">
          <td align="center" colspan="2">&nbsp;</td>
        </tr>


        <tr align=" justify" class="pregunta">
          <td align="center" colspan="2">Nombre de quien registró</td>
        </tr>

        <tr>
          <td align="center" colspan="2"><%= f.text_field :nombre, :size => 60%></td>
        </tr>

      </table>
      </td>
    </tr>
    <!-- segunda barra inferior -->
      <tr align="center">
      <td align="center">
        <table width="100%" border="0" cellpadding="2" cellspacing="1" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid;">
        <tr bgcolor="#E8E8E8" class="subtitulo">
          <td align="center" colspan="4" ></td>
        </tr>
        <tr align=" justify" class="pregunta">
          <td align="center">Correo electrónico</td>
        </tr>
        <tr>

          <td align="center"><%=f.text_field :email, :required => true%></td>
        </tr>
      </table></td>
     </tr>
     <!-- barra inferior -->
       <tr align="center">
      <td align="center">
        <table width="100%" border="0" cellpadding="2" cellspacing="1" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid;">
        <tr bgcolor="#E8E8E8" class="subtitulo">
          <td align="center" colspan="4" ></td>
        </tr>
        <tr align=" justify" class="pregunta">
          <td align="center">Contraseña</td>
          <td align="center">Confirmación de la contraseña</td>
       </tr>
        <tr>
          <td align="center"><%= f.password_field :password %></td>
          <td align="center"><%= f.password_field :password_confirmation %></td>
        </tr>
      </table></td>
     </tr>

    <!-- espacio -->
    <tr>
      <td colspan="3"><hr /></td>
    </tr>
    <!-- FOOTER -->
    <tr>
      <td align="right">
        <table>
          <tr>
            <td>
              <input title="guardar y regresar" alt=" Guardar y regresar a la sección anterior " type="image"  src="/images/botones/btn_guardar.png" width="150" height="40" style="margin-left:90px;"/>
            </td>
            <td>
              <%= link_to image_tag("botones/btn_regresar.png", :width => 170, :height=>"40", :border =>0, :style => "margin-left:90px;" ) ,  :controller => "home"-%>
            </td>
          </tr>
        </table>
      </td>
    </tr>
  </table>
<% end %>




