    animation: "slide",
    animationLoop: false,
    itemWidth: 480,
    itemMargin: 5,
    minItems: 2,
    maxItems: 4
  });
});
</script>



<div class="titulos">
  <p>Galería Fotográfica</p>
  <p><%=@nombre%></p>
</div>




<!-- Place somewhere in the <body> of your page -->
<div class="flexslider" style="height: 460px">
  
  <ul class="slides">

    <%for adjunto in @adjuntos%>
      <%if File.exists?(adjunto.full_path)%>
        <li>
          <%=image_tag "/upload/download/#{adjunto.id}", :size => "480x280"%>
        </li>
      <%end%>
    <%end%>
  </ul>
  
</div>