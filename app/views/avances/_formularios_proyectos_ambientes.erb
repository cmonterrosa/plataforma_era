<%if @proyectos_seleccionados_ambiente > 0%>
        <%valores_por_defecto = Hash.new%>
        <%@s_proyectos_ma =  Pescolar.find(:all, :conditions => ["participacion_id = ? AND materia= ?", @participacion, 'MEDIOAMBIENTE'])%>
        <%unless @s_proyectos_ma.empty?%>
                <%contador_proyectos=1%>
                <%@s_proyectos_ma.each do |p|%>
                    <%valores_por_defecto["nombre_#{contador_proyectos}"] =  p.nombre%>
                    <%valores_por_defecto["descripcion_#{contador_proyectos}"] =  p.descripcion%>
                    <%contador_proyectos+=1%>
                <%end%>
        <%end%>

  <div class="grid-12-12">
      <fieldset>
        <legend style=" font-size: 14px;" >DETALLE&nbsp;DE&nbsp;PROYECTOS:</legend>
          <%(1..@proyectos_seleccionados_ambiente).each do | proyecto|%>
                  <div class="grid-12-12"></div>
                  <div class="grid-12-12">
                     <label style=" font-weight: bold;"><%=h proyecto%>.- Nombre del proyecto: <em class="formee-req">*</em></label>
                      <%= text_field "pescolaresambiente", "nombre_#{proyecto}", :value => valores_por_defecto["nombre_#{proyecto}"], :required => true, :disabled => "disabled" %>
                  </div>

                  <div class="grid-12-12">
                    <label style=" font-weight: bold;">Descripci√≥n del proyecto: </label>
                    <%= text_area "pescolaresambiente", "descripcion_#{proyecto}", :value => valores_por_defecto["descripcion_#{proyecto}"], :required => true, :disabled => "disabled" %>
                  </div>

                  
          <%end%>
      </fieldset>
    <%end%>
</div>


