<%if @proyecto%>
  <%if @proyecto.oficializado%>
    <div class="titulos" style="text-align: center;" ><p>AVANCES</p></div>
     
      <% case @proyecto.avance
        when 1 %>

          <div align="center" class ="grid-12-12"><%= link_to image_tag("/images/botones/primer_avance1.png", :mouseover => "/images/botones/primer_avance.png" ), { :controller => "avances", :num_avance => Base64.encode64("1") } %>
          </div>

        <% when 2 %>
            <!--
            <div class ="grid-3-12">&nbsp;</div>
            <div class ="grid-3-12"><%= link_to image_tag("/images/botones/imprimir_1avance.png", :mouseover => "/images/botones/imprimir_1avance1.png" ), { :action => "avance_to_pdf.pdf", :num_avance => Base64.encode64("1") }, :target => "_blank" %></div>
            -->
            <div align="center" class ="grid-12-12"><%= link_to image_tag("/images/botones/segundo_avance.png", :mouseover => "/images/botones/segundo_avance1.png" ), { :controller => "avances", :num_avance => Base64.encode64("2") } %></div>
            
        <% when 3 %>
            <div class="formee" style="text-align:center" >
              <fieldset>
                <h2 style="color: #105cb6; font-weight: bold;">IMPRIMIR ACCIONES DEL PROYECTO:</h2>
                <% @ejes.each do |eje| %>
                  <% case eje.catalogo_eje.clave
                  when "EJE1" %>
                    <label><%= link_to "   EJE 1.- DESARROLLO DE COMPETENCIAS.", {:controller => "diagnosticos", :action => "eje1_to_pdf", :proyecto => @proyecto, :id => "#{Base64.encode64(@diagnostico.id.to_s)}.pdf" }, :style => "color:#dd4b39; text-decoration: none;", :title => "IMPRIMIR EJE1", :target => "_blank" %></label><br />
                  <% when "EJE2" %>
                    <label><%= link_to "   EJE 2.- ENTORNO SALUDABLE.", {:controller => "diagnosticos", :action => "eje2_to_pdf", :id => "#{Base64.encode64(@diagnostico.id.to_s)}.pdf" }, :style => "color:#dd4b39; text-decoration: none;", :title => "IMPRIMIR EJE2", :target => "_blank" %></label><br />
                  <% when "EJE3" %>
                    <label><%= link_to "   EJE 3.- HUELLA ECOLÓGICA.", {:controller => "diagnosticos", :action => "eje3_to_pdf", :id => "#{Base64.encode64(@diagnostico.id.to_s)}.pdf" }, :style => "color:#dd4b39; text-decoration: none;", :title => "IMPRIMIR EJE3", :target => "_blank" %></label><br />
                  <% when "EJE4" %>
                    <label><%= link_to "   EJE 4.- CONSUMO RESPONSABLE / SALUDABLE.", {:controller => "diagnosticos", :action => "eje4_to_pdf", :id => "#{Base64.encode64(@diagnostico.id.to_s)}.pdf"}, :style => "color:#dd4b39; text-decoration: none;", :title => "IMPRIMIR EJE4", :target => "_blank" %></label><br />
                  <% when "EJE5" %>
                    <label><%= link_to "   EJE 5.- PARTICIPACIÓN COMUNITARIA.", {:controller => "diagnosticos", :action => "eje5_to_pdf", :id => "#{Base64.encode64(@diagnostico.id.to_s)}.pdf"}, :style => "color:#dd4b39; text-decoration: none;", :title => "IMPRIMIR EJE5", :target => "_blank" %></label><br />
                  <% else %>
                  <% end %>
                <% end %>
              </fieldset>
            </div>
            <!--
            <div class ="grid-3-12"><%= link_to image_tag("/images/botones/imprimir_1avance.png", :mouseover => "/images/botones/imprimir_1avance1.png" ), { :action => "avance_to_pdf.pdf", :num_avance => Base64.encode64("1") }, :target => "_blank" %></div>
            <div class ="grid-3-12"><%= link_to image_tag("/images/botones/imprimir_2avance.png", :mouseover => "/images/botones/imprimir_2avance1.png" ), { :action => "avance_to_pdf.pdf", :num_avance => Base64.encode64("2") }, :target => "_blank" %></div>
            -->
      <!-- reporte de finalizacion -->
      <div class="container">
        <div class="formee">
            <% form_for :proyecto, @proyecto, :url => { :action => "reporte_final", :controller => "registro", :id => "#{current_user.id}.pdf" }, :html => { :target => "_blank"} do -%>
              <div class="grid-center">
                <p id="pdf_link"><input type="submit" title="IMPRIMIR REPORTE DE FINALIZACIÓN DEL PROCESO" value="IMPRIMIR REPORTE DE FINALIZACIÓN DEL PROCESO" /></p>
              </div>
            <%end%>
        </div>
      </div>


       
      <% end %>
  <% else %>
    
  <% end %>

 <%end%>