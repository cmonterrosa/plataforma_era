                <% end %>
                <% num+=1 %>
              <% end %>
              </ol>
            </div>
            -->
          </article>
        </div>
      </section>
    </td>
  </tr>
  <tr>
    <td>
      <% if eje.catalogo_eje.clave == "EJE1" %>
        <%= render :partial => "competencia"%>
      <% end %>
    </td>
  </tr>
</table>
<% end %>
<br />
