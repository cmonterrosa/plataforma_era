<div class="container">
  <div class="formee">
    <table align="center" class="subprincipal" width="90%" cellspacing="5" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid;">
    <tr class="tdiagnostico">
        <td align="center" ><label>ESCUELA: <%=@diagnostico.escuela.nombre%> | CLAVE: <%=@diagnostico.escuela.clave%></label></td>
      </tr>

      <tr class="tdiagnostico">
        <td align="center" ><label>Reporte de evidencias que no están correctas o no corresponden a pregunta</label></td>
      </tr>
    </table>
    <br />
    <fieldset>
      <div class="grid-12-12 clear">
        <table width="95%" border="0" cellspacing="0" cellpadding="0" class="sample" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid">
          <tr class="d0">
            <td style="vertical-align: middle;">&nbsp;</td>
            <td style="vertical-align: middle;">Eje</td>
            <td style="vertical-align: middle;">Pregunta</td>
            <td style="vertical-align: middle;">Descripción</td>
            <td style="vertical-align: middle;">Tipo</td>
            <td style="vertical-align: middle;">Tamaño</td>
            <td style="vertical-align: middle;">Fecha/hora&nbsp;carga</td>
            <td style="vertical-align: middle;">Validado por:</td>
          </tr>

          <%contador=1%>
          <%@evidencias.each do |evidencia|%>
            <tr>

              <!-- icono de validado -->
              <%if evidencia.validado%>
                <td style="vertical-align: middle;"><%=image_tag 'admin/disponible.png'%></td>
              <%else%>
                <%if evidencia.validado == false%>
                    <td style="vertical-align: middle;"><%=image_tag 'admin/bloqueado.png'%></td>
                <%else%>
                    <td style="vertical-align: middle;">-</td>
                <%end%>
              <%end%>

              <td style="vertical-align: middle;"><%=h (evidencia.eje_id)%></td>
              <td style="vertical-align: middle;"><%=h (evidencia.numero_pregunta)%></td>
              <td style="vertical-align: middle;"><%=h (evidencia.descripcion)%></td>
              <td style="vertical-align: middle;"><%=h (evidencia.tipodoc) ? evidencia.tipodoc.descripcion : "---"%></td>
              <td style="vertical-align: middle;"><%=h evidencia.file_size %> Kb</td>
              <td style="vertical-align: middle;"><%=h evidencia.created_at.strftime("%d/%m/%Y - %H:%M")%></td>
              <td style="vertical-align: middle;"><%=h (evidencia.user_validado)? User.find(evidencia.user_validado).nombre : "---"%></td>
            </tr>
           <%contador+=1%>
          <%end%>
         </table>
      </div>

    <div class="grid-12-12 clear"></div>
    <div class="grid-12-12">
         <label><b>Observaciones: </b><%=@observaciones_evidencias%></label>
    </div>
    <div class="grid-12-12 clear"></div>
  </fieldset>
 </div>
</div>

