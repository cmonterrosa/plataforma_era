<div class="container">
  <div class="formee">
    <table align="center" class="subprincipal" width="50%" cellspacing="5" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid;">
      <tr class="tdiagnostico">
        <td align="center" ><label>ARCHIVOS ADJUNTOS</label></td>
      </tr>
    </table>
    <fieldset>
      <div class="grid-12-12 clear">
        <table width="95%" border="0" cellspacing="0" cellpadding="0" class="sample" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid">
          <tr class="d0">
            <td style="vertical-align: middle;">Tipo</td>
            <td style="vertical-align: middle;">Tamaño</td>
            <td style="vertical-align: middle;">Extensión</td>
            <td style="vertical-align: middle;">Fecha/hora&nbsp;carga</td>
            <td style="vertical-align: middle;" colspan="3" align="center">Acciones</td>
          </tr>
          <% @uploaded_files.each do |uploaded_file| %>
          <tr>
            <td style="vertical-align: middle;"><%=h uploaded_file.tipodoc.descripcion%></td>
            <td style="vertical-align: middle;"><%=h uploaded_file.file_size %> Kb</td>
            <td style="vertical-align: middle;"><%=h uploaded_file.file_type %></td>
            <td style="vertical-align: middle;"><%=h uploaded_file.created_at.strftime("%Y-%m-%d / %H:%M:%S")%></td>
            <td style="vertical-align: middle;"><%=h button_to 'Detalle', {:action => "show", :id => uploaded_file} %></td>
            <td style="vertical-align: middle;"><%= button_to 'Descargar', {:action => "download", :id => uploaded_file}, :method => :delete, :class => 'boton'%></td>
            <td style="vertical-align: middle;"><%= button_to 'Eliminar', {:action => "destroy", :id => uploaded_file, :tramite => @tramite}, :confirm => '¿Esta seguro?', :method => :post, :class => 'boton' %></td>
          </tr>
          <%end%>
        </table>
      </div>

    <div class="grid-12-12 clear"></div>

    <!-- ADJUNTAR ARCHIVO -->
    <% form_for :escuela, @escuela, :url => { :action => "new", :controller => "upload" }, :html => { :target => "_blank"} do |f| -%>
      <div class="grid-center">
        <input type="submit" title="ADJUNTAR NUEVO ARCHIVO" value="ADJUNTAR NUEVO ARCHIVO" />
      </div>
    <%end%>
    </fieldset>

  <div class="grid-12-12 clear"></div>


  <!-- boton regresar -->
  <div class="titulos">
          <%= link_to image_tag("botones/btn_regresar.png", :border =>0) , :controller => "home", :action => "index"%><br />
  </div>


  </div>
</div>

