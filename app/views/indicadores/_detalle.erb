<!-- Estilo -->
<%= stylesheet_link_tag "indicadores/AdminLTE.min.css" %>
<%= stylesheet_link_tag "indicadores/bootstrap.min.css" %>
<%= stylesheet_link_tag "indicadores/bootstrap.css" %>

<!-- Contenido -->

<div>

  <!-- ##### Indicadores Generales #####  -->

  <!-- Indicadores Alumnos -->
  <div class="col-lg-5">
  <div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
      <thead>
        <tr>
          <th>ALUMNOS</th>
          <th>ALUMNAS</th>
          <th>TOTAL</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%=h@alumnos%></td>
          <td><%=h @alumnas%></td>
          <td><%=h (@alumnos + @alumnas)%></td>
        </tr>
      </tbody>
    </table>
  </div>
  </div>

  <div class="col-lg-7">
    <div class="table-responsive">
      <table class="table table-bordered table-hover table-striped">
        <thead>
          <tr>
            <th>DOCENTES</th>
            <th>ADMINISTRATIVOS</th>
            <th>PERSONAL DE APOYO</th>
          <th>TOTAL</th>
          </tr>
        </thead>
      <tbody>
        <tr>
          <td><%=h @docentes%></td>
          <td><%=h @personal_admvo%></td>
          <td><%=h @personal_apoyo%></td>
          <td><%=h (@docentes + @personal_admvo + @personal_apoyo)%></td>
        </tr>
      </tbody>
    </table>
  </div>
  </div>

  <!-- Escuelas -->

   <div class="col-lg-7">
    <div class="table-responsive">
      <table class="table table-bordered table-hover table-striped">
        <thead>
          <tr>
            <%for turno in @turnos%>
              <th>TURNO <%=turno.turno%></th>
            <%end%>
            <th>TOTAL</th>
          </tr>
        </thead>
      <tbody>
        <tr>
          <%for turno in @turnos%>
            <td><%=Escuela.count(:id, :conditions => ["turno = ? AND id in (?)", turno.turno, @escuelas.map{|i|i.id}])%></td>
          <%end%>
          <td><%=h@escuelas.size%></td>
        </tr>
      </tbody>
    </table>
  </div>
  </div>




  
  <!-- Eje 1 -->

  <div class="col-lg-12" id="eje1">
    <ol class="breadcrumb">
      <li class="active"><i class="fa fa-dashboard">Eje 1.- Desarrollo de Competencias</i></li>
    </ol>

    <div class="col-lg-3 col-xs-6">
      <div class="small-box bg-aqua">
        <div class="inner">
        <h3><%=h @docentes_capacitados_salud%></h3>
        <p>Docentes capacitados en salud</p>
        </div>
      </div>
    </div>

    <div class="col-lg-3 col-xs-6" style="text-align: center;">
      <div class="small-box bg-green">
        <div class="inner">
          <h3><%=h @docentes_capacitados_medio_ambiente%></h3>
          <p>Docentes capacitados en medio ambiente</p>
        </div>
      </div>
    </div>

    <div class="col-lg-3 col-xs-6" style="text-align: center;">
      <div class="small-box bg-yellow">
        <div class="inner">
          <h3><%=h @alumnos_capacitados_medio_ambiente%></h3>
          <p>Alumnos capacitados en medio ambiente</p>
        </div>
      </div>
    </div>

    <div class="col-lg-3 col-xs-6">
      <div class="small-box bg-red">
        <div class="inner">
          <h3><%=h @alumnos_capacitados_salud%></h3>
          <p>Alumnos capacitados en salud</p>
        </div>
      </div>
    </div>

  </div>

  <!-- eje 2 -->
  <div class="col-lg-12" id="eje2">

    <ol class="breadcrumb">
      <li class="active"><i class="fa fa-dashboard">Eje 2.- Entorno Saludable</i></li>
    </ol>

    <div class="col-lg-3 col-xs-6">
      <div class="small-box bg-aqua">
        <div class="inner">
           <h3><%=h  @escuelas_realizan_reforestacion%> </h3>
           <p>Escuelas Realizan Labores Reforestación</p>
        </div>
      </div>
    </div>

    <div class="col-lg-3 col-xs-6">
      <div class="small-box bg-green">
                <div class="inner">
                  <h3><%=h  @porcentaje_total_areas_verdes%> %</h3>
                  <p>Porcentaje Terreno Área Verde</p>
                </div>
      </div>
    </div>

 
    <div class="col-lg-3 col-xs-6">
        <div class="small-box bg-yellow">
                  <div class="inner">
                    <h3><%=h @porcentaje_focos_ahorradores%> %</h3>
                    <p>Porcentaje Focos Ahorradores</p>
                  </div>
        </div>
    </div>

    <div class="col-lg-3 col-xs-6">
      <div class="small-box bg-red">
        <div class="inner">
          <h3><%=h @escuelas_separan_basura%></h3>
          <p>Escuelas separan la basura</p>
        </div>
      </div>
    </div>
  </div>

  <!-- eje 3 -->

  <div class="col-lg-12" id="eje3">

    <ol class="breadcrumb">
      <li class="active"><i class="fa fa-dashboard">Eje 3.- Huella ecológica</i></li>
    </ol>

    <div class="col-lg-3 col-xs-6">
      <div class="small-box bg-aqua">
        <div class="inner">
          <h3><%=h   @escuelas_establecimientos_alimentos_bebidas%> </h3>
          <p>Escuelas cuentan con establecimientos para alimentos y bebidas</p>
        </div>
      </div>
   </div>
  </div>

</div>



