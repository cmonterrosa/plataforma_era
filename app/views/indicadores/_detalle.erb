<!-- Estilo -->
<%= stylesheet_link_tag "indicadores/AdminLTE.min.css" %>
<%= stylesheet_link_tag "indicadores/bootstrap.min.css" %>
<%= stylesheet_link_tag "indicadores/bootstrap.css" %>

<!-- Contenido -->

<div style="background-image: url(/images/era/bar_sub.png);">

  <!-- ##### Indicadores Generales #####  -->

  <!-- Indicadores Alumnos -->
  <div class="col-lg-5">
  <div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
      <thead>
        <tr>
          <th>ALUMNOS</th>
          <th>ALUMNAS</th>
          <th>TOTAL</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%=h separa_miles(@alumnos)%></td>
          <td><%=h separa_miles(@alumnas)%></td>
          <td><%=h separa_miles(@alumnos + @alumnas)%></td>
        </tr>
      </tbody>
    </table>
  </div>
  </div>

  <div class="col-lg-7">
    <div class="table-responsive">
      <table class="table table-bordered table-hover table-striped">
        <thead>
          <tr>
            <th>DOCENTES</th>
            <th>ADMINISTRATIVOS</th>
            <th>PERSONAL DE APOYO</th>
          <th>TOTAL</th>
          </tr>
        </thead>
      <tbody>
        <tr>
          <td><%=h separa_miles(@docentes)%></td>
          <td><%=h separa_miles(@personal_admvo)%></td>
          <td><%=h separa_miles(@personal_apoyo)%></td>
          <td><%=h separa_miles(@docentes + @personal_admvo + @personal_apoyo)%></td>
        </tr>
      </tbody>
    </table>
  </div>
  </div>

  <!-- Escuelas y Turnos-->
  <div class="col-lg-12">
    <div class="table-responsive">
      <table class="table table-bordered table-hover table-striped">
        <thead>
          <tr>
            <th colspan="<%=h @turnos.size%>">TURNOS</th>
          </tr>
          <tr>
            <%@turnos.each do |turno|%>
              <%if turno.numero.to_i > 0%>
                  <th><%=h (turno.turno) ? turno.turno : "NE"%></th>
              <%end%>
            <%end%>
            <th>TOTAL ESCUELAS REGISTRADAS</th>
          </tr>
        </thead>
      <tbody>
        <tr>
           <%@turnos.each do |turno|%>
            <%if turno.numero.to_i > 0%>
              <td><%=h separa_miles(turno.numero)%></td>
            <%end%>
          <%end%>
          <td><%=h separa_miles(@escuelas.size)%></td>
        </tr>
      </tbody>
    </table>
  </div>
  </div>




  
  <!-- Eje 1 -->

  <div class="col-lg-12" id="eje1">
    <ol class="breadcrumb">
      <li class="active"><i class="fa fa-dashboard">Eje 1.- Desarrollo de Competencias</i></li>
    </ol>

    <div class="col-lg-3 col-xs-6">
      <div class="small-box bg-aqua">
        <div class="inner">
        <h3><%=h separa_miles(@docentes_capacitados_salud)%></h3>
        <p>Docentes capacitados en salud</p>
        </div>
      </div>
    </div>

    <div class="col-lg-3 col-xs-6" style="text-align: center;">
      <div class="small-box bg-green">
        <div class="inner">
          <h3><%=h separa_miles(@docentes_capacitados_medio_ambiente)%></h3>
          <p>Docentes capacitados en medio ambiente</p>
        </div>
      </div>
    </div>

    <div class="col-lg-3 col-xs-6" style="text-align: center;">
      <div class="small-box bg-yellow">
        <div class="inner">
          <h3><%=h separa_miles(@alumnos_capacitados_medio_ambiente)%></h3>
          <p>Alumnos capacitados en medio ambiente</p>
        </div>
      </div>
    </div>

    <div class="col-lg-3 col-xs-6">
      <div class="small-box bg-red">
        <div class="inner">
          <h3><%=h separa_miles(@alumnos_capacitados_salud)%></h3>
          <p>Alumnos capacitados en salud</p>
        </div>
      </div>
    </div>


    <div class="col-lg-3 col-xs-6">
      <div class="small-box bg-aqua">
        <div class="inner">
        <h3><%=h separa_miles(@docentes_aplican_conocimientos)%></h3>
        <p>Docentes aplican con sus alumnos los conocimientos adquiridos</p>
        </div>
      </div>
    </div>



  </div>

  <!-- eje 2 -->
  <div class="col-lg-12" id="eje2">

    <ol class="breadcrumb">
      <li class="active"><i class="fa fa-dashboard">Eje 2.- Entorno Saludable</i></li>
    </ol>

    <%if @espacios%>
    <div class="col-lg-7">
    <div class="table-responsive">
      <table class="table table-bordered table-hover table-striped">
        <thead>
          <tr>
            <%@espacios.each do |e|%>
              <th><%=h e.descripcion%></th>
            <%end%>
          </tr>
        </thead>
      <tbody>
        <tr>
           <%@espacios.each do |e|%>
              <td><%=h separa_miles(e.numero)%></td>
           <%end%>
         </tr>
      </tbody>
    </table>
  </div>
   </div>
   <%end%>

    <div class="col-lg-3 col-xs-6">
      <div class="small-box bg-aqua">
        <div class="inner">
           <h3><%=h  separa_miles(@escuelas_realizan_reforestacion)%> </h3>
           <p>Escuelas Realizan Labores Reforestación</p>
        </div>
      </div>
    </div>

    <div class="col-lg-3 col-xs-6">
      <div class="small-box bg-green">
                <div class="inner">
                  <h3><%=h  separa_miles(@porcentaje_total_areas_verdes)%> %</h3>
                  <p>Porcentaje Terreno Área Verde</p>
                </div>
      </div>
    </div>

 
    <div class="col-lg-3 col-xs-6">
        <div class="small-box bg-yellow">
                  <div class="inner">
                    <h3><%=h separa_miles(@porcentaje_focos_ahorradores)%> %</h3>
                    <p>Porcentaje Focos Ahorradores</p>
                  </div>
        </div>
    </div>

    <div class="col-lg-3 col-xs-6">
      <div class="small-box bg-red">
        <div class="inner">
          <h3><%=h separa_miles(@escuelas_separan_basura)%></h3>
          <p>Escuelas separan la basura</p>
        </div>
      </div>
    </div>
  </div>

  <!-- eje 3 -->

  <div class="col-lg-12" id="eje3">

    <ol class="breadcrumb">
      <li class="active"><i class="fa fa-dashboard">Eje 3.- Huella ecológica</i></li>
    </ol>

    <div class="col-lg-3 col-xs-6">
      <div class="small-box bg-aqua">
        <div class="inner">
          <h3><%=h  separa_miles(@escuelas_establecimientos_alimentos_bebidas)%> </h3>
          <p>Escuelas cuentan con establecimientos para alimentos y bebidas</p>
        </div>
      </div>
   </div>
  </div>

</div>



