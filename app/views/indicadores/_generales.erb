  <!-- Por zona escolar -->
  <div class="col-lg-4">
    <div class="table-responsive">
      <table class="table table-bordered table-hover table-striped">
        <thead>
          <tr class="TituloTabla">
            <th style="text-align: center" colspan="2">ZONAS ESCOLARES</th>
          </tr>
          </thead>
          <tbody>
          <%contador_zonas_escolares=0%>
          <%@zonas_escolares.each do |ze|%>
                <%if ze.numero.to_i > 0 && ze.zona_escolar != ""%>
                  <tr class="TituloTabla">
                      <%nivel = (ze.nivel_id)? Nivel.find_by_id(ze.nivel_id) : "NE"%>
                      <td><%=h (ze.zona_escolar) ? "#{ze.zona_escolar} / #{(nivel)? nivel.descripcion : 'NE'}" : "NE"%></td>
                      <td><%=h separa_miles(ze.numero)%></td>
                      <%contador_zonas_escolares+=ze.numero.to_i%>
                  </tr>
              <%end%>
            <%end%>

           <tr>
             <th>SIN ESPECIFICAR</th>
             <th><%= @escuelas.size - contador_zonas_escolares %></th>
            </tr>
            
          <tr>
            <th>TOTAL DE ESCUELAS</th>
            <th><%=h @escuelas.size%></th>
          </tr>
          </tbody>
      </table>
  </div>
  </div>

   <!-- Por sector -->
  <div class="col-lg-4">
    <div class="table-responsive">
      <table class="table table-bordered table-hover table-striped">
        <thead>
          <tr class="TituloTabla">
            <th style="text-align: center" colspan="2">SECTORES</th>
          </tr>
          </thead>
          <tbody>
          <%contador_sector=0%>
          <%@sectores.each do |s|%>
                <%if s.numero.to_i > 0 && s.sector != ""%>
                  <tr class="TituloTabla">
                     <%nivel = (s.nivel_id)? Nivel.find_by_id(s.nivel_id) : "NE"%>
                      <td><%=h (s.sector) ? "#{s.sector} / #{(nivel)? nivel.descripcion : 'NE'}" : "NE"%></td>
                      <td><%=h separa_miles(s.numero)%></td>
                      <%contador_sector+=s.numero.to_i%>
                  </tr>
              <%end%>
            <%end%>

          <tr>
             <th>SIN ESPECIFICAR</th>
             <th><%= @escuelas.size - contador_sector %></th>
           </tr>

          <tr>
            <th>TOTAL DE ESCUELAS</th>
            <th><%=h @escuelas.size%></th>
          </tr>
          </tbody>
      </table>
  </div>
  </div>

