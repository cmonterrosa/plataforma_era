<!-- ##### Indicadores Generales #####  -->

<div class="grid-12-12">
  <%generacion = (@ciclo == '2013-2014')? "Primera" : "Segunda"%>
  <h4 align="center"> <%=generacion%> Generación</h4>
  <h5 align="center">CICLO ESCOLAR <%=@ciclo%></h5>
</div>

  <!-- Indicadores Alumnos -->
  <div class="col-lg-10">
  <div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
      <thead>
        <tr class="TituloTabla">
          <th>ALUMNOS</th>
          <th>ALUMNAS</th>
          <th>TOTAL</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%=h separa_miles(@alumnos)%></td>
          <td><%=h separa_miles(@alumnas)%></td>
          <td><%=h separa_miles(@alumnos + @alumnas)%></td>
        </tr>
      </tbody>
    </table>
  </div>
  </div>

  <!-- Indicadores Trabajadores -->
  <div class="col-lg-10">
    <div class="table-responsive">
      <table class="table table-bordered table-hover table-striped">
        <thead>
          <tr class="TituloTabla">
            <th>DOCENTES</th>
            <th>DOCENTES DE APOYO</th>
            <th>ADMTIVOS</th>
            <th>PERSONAL DE APOYO</th>
          <th>TOTAL</th>
          </tr>
        </thead>
      <tbody>
        <tr>
          <td><%=h separa_miles(@docentes)%></td>
          <td><%=h separa_miles(@docentes_apoyo)%></td>
          <td><%=h separa_miles(@personal_admvo)%></td>
          <td><%=h separa_miles(@personal_apoyo)%></td>
          <td><%=h separa_miles(@docentes + @docentes_apoyo + @personal_admvo + @personal_apoyo)%></td>
        </tr>
      </tbody>
    </table>
  </div>
  </div>



 <!-- Escuelas y Sostenimientos -->
  <div class="col-lg-10">
    <div class="table-responsive">
      <table class="table table-bordered table-hover table-striped">
        <thead>
          <tr class="TituloTabla">
            <th style="text-align: center" colspan="<%=h @sostenimientos.size + 1%>">SOSTENIMIENTOS</th>
          </tr>
          <tr class="TituloTabla">
            <%@sostenimientos.each do |s|%>
              <%if s.numero.to_i > 0%>
                  <th><%=h (s.sostenimiento) ? s.sostenimiento : "NE"%></th>
              <%end%>
            <%end%>
            <th>TOTAL DE ESCUELAS</th>
          </tr>
        </thead>
      <tbody>
        <tr>
           <%@sostenimientos.each do |s|%>
            <%if s.numero.to_i > 0%>
              <td><%=h separa_miles(s.numero)%></td>
            <%end%>
          <%end%>
          <td><%=h separa_miles(@escuelas.size)%></td>
        </tr>
      </tbody>
    </table>
  </div>
  </div>




