<div class="formee">
  <div class="grid-12-12 clear"></div>
  <div class="grid-12-12">
    <div class="titulos">Listado de Escuelas del Nivel <%= @nivel %></div>
  </div>
  <div class="grid-12-12 clear"></div>
</div>

<div id="divlista">
  <table width="95%" border="0" cellspacing="0" cellpadding="5" class="sample" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid" align="center">
    <tr style="background-color:#2E6AB1;color:white;">
      <th style="vertical-align: middle;">Clave</th>
      <th style="vertical-align: middle;">Nombre</th>
      <th style="vertical-align: middle;">Director</th>
    </tr>
<%clase=0%>
<% @escuelas.each do |escuela|%>
      <tr class="d<%=invert_class(clase)%>">
      <td align="center"><%=h(escuela.clave)%></td>
      <td align="justify"><%=h(escuela.nombre)%></td>
      <td align="justify"><%=h escuela.nombre_director? ? escuela.nombre_director : "NO EXISTE INFORMACIÃ“N" %> </td>
      <% clase = invert_class(clase) %>
    </tr>
<%end%>
    <% if @escuelas.total_entries > @escuelas.per_page.to_i %>
    <tr class="d<%=invert_class(clase)%>" align="center" >
      <td colspan="7" style="padding: 0;">
        <div class="digg_pagination">
          <div class="page_info">
            <%= page_entries_info @escuelas %>
          </div>
          <%= will_paginate @escuelas %>
        </div>
      </td>
    </tr>
    <% end %>
  </table>
</div>


<br/>
<div class="titulos">
  <%= link_to image_tag("botones/btn_regresar.png", :mouseover => "botones/btn_regresar1.png") , :controller => "public", :action => "report_by_niveles_libre" %><br />
</div>
