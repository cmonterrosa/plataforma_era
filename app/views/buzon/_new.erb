<div class="container">
  <div class="formee-msg-info">
    <h3>Gracias por su opinión, es muy importante para nosotros</h3>
    <ul>
      <li>Los campos marcados con <em class="formee-req">*</em> son obligatorios.</li>
    </ul>
  </div>

<%form_for(@comentario, :url => {:action => "save"}, :html => {:class => "formee" }) do |f| -%>
  <fieldset>
    <legend>NUEVO&nbsp;COMENTARIO</legend>
    <div class="grid-12-12 clear"></div>
    <%#*<div class="grid-form">%>
    <div class="grid-9-12">
      <label>Asunto: <em class="formee-req">*</em></label>
        <%= f.text_field :asunto, :placeholder => "Escriba brevemente el asunto" %>
    </div>
    <%#*</div>%>
    <div class="grid-12-12 clear"></div>
    <%#*<div class="grid-form">%>
      
    <div class="grid-12-12">
      <label>Descripción: <em class="formee-req">*</em></label>
        <%= f.text_area :descripcion, :placeholder => "Escriba la descripción detallada" %>
    </div>
    <%#*</div>%>
    <div class="grid-12-12 clear"></div>
    <div class="grid-7-12">
      <input class="right" type="submit" title="ENVIAR" value="ENVIAR" />
    </div>
  </fieldset>
<%end%>
</div>

<script type="text/javascript">
  var comentario_asunto = new LiveValidation( 'comentario_asunto', {onlyOnSubmit: true} );
  comentario_asunto.add( Validate.Presence );
  var comentario_descripcion = new LiveValidation( 'comentario_descripcion', {onlyOnSubmit: true} );
  comentario_descripcion.add( Validate.Presence );
</script>